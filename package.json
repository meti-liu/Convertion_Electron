{
  "name": "electron-jig-viewer",
  "version": "1.0.0",
  "description": "An Electron application to visualize JIG data.",
  "main": "app/main/background.js",
  "scripts": {
    "start": "npm run dev",
    "dev": "concurrently \"vite\" \"electron .\"",
    "build": "vite build",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.electron.jig-viewer",
    "productName": "JIG Viewer",
    "directories": {
      "output": "dist"
    },
    "files": [
      "app/**/*",
      "data/**/*",
      "test/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "app/python",
        "to": "python"
      }
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "chart.js": "^4.4.3",
    "chartjs-plugin-downsample": "^1.1.0",
    "element-plus": "^2.11.1",
    "sqlite3": "^5.1.7",
    "vue": "^3.4.0",
    "vue-chartjs": "^5.3.1",
    "vue-i18n": "^12.0.0-alpha.3",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^6.0.1",
    "concurrently": "^9.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "vite": "^7.1.2",
    "wait-on": "^8.0.4"
  }
}
