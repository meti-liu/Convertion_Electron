{
  "name": "electron-jig-viewer",
  "version": "1.0.0",
  "description": "An Electron application to visualize JIG data.",
  "main": "app/main/main.js",
  "scripts": {
    "start": "npm run dev",
    "dev": "concurrently \"vite\" \"electron .\"",
    "build": "vite build && electron-builder",
    "build:python": "pyinstaller --onefile --distpath ./resources/python app/python/parse_fails.py",
    "build:python-json": "pyinstaller --onefile --distpath ./resources/python app/python/json_script.py",
    "build:all": "npm run build:python && npm run build:python-json && npm run build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "better-sqlite3": "^12.2.0",
    "chart.js": "^4.4.3",
    "chartjs-plugin-downsample": "^1.1.0",
    "element-plus": "^2.11.1",
    "vue": "^3.4.0",
    "vue-chartjs": "^5.3.1",
    "vue-i18n": "^12.0.0-alpha.3",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^6.0.1",
    "concurrently": "^9.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.9",
    "vite": "^7.1.2",
    "wait-on": "^8.0.4"
  },
  "build": {
    "appId": "com.jig-viewer.app",
    "productName": "JIG Viewer",
    "directories": {
      "output": "dist"
    },
    "files": [
      "app/**/*",
      "resources/**/*",
      "data/**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "extraResources": [
      {
        "from": "resources/python",
        "to": "python",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    }
  }
}
